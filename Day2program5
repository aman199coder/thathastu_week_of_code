for i in range(3,0,-1):
    for j in range(0,(2*i-1)):
        if(j%2==0):
            print(i,end="")
        else:
            print("*",end="")
    print()
for i in range(1,4-1):
    for j in range(0,(2*i-1)):
        if(j%2==0):
            print(i,end="")
        else:
            print("*",end="")
    print()
